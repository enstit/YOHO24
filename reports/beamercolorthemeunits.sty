\usepackage{color}

\usecolortheme{whale}
\usecolortheme{orchid}

\definecolor{UNITSBlack}{RGB}{0,0,0}
\definecolor{UNITSWhite}{RGB}{255,255,255}

\definecolor{UNITSCherry}{RGB}{189,14,73}
\definecolor{UNITSBlue}{RGB}{25,51,90}
\definecolor{UNITSEyesBlue}{RGB}{148,195,225}
\definecolor{UNITSIceBlue}{RGB}{186,206,210}
\definecolor{UNITSSugarPaperBlue}{RGB}{104,148,159}

% "bg=" make it transparent
\setbeamercolor{title}{fg=UNITSBlue, bg=}
\setbeamercolor{frametitle}{fg=UNITSBlue}
\setbeamercolor{caption name}{fg=UNITSSugarPaperBlue}
\setbeamercolor{block title}{fg=UNITSWhite, bg=UNITSSugarPaperBlue}
\setbeamercolor{block body}{fg=UNITSBlack, bg=}

\setbeamercolor{headline}{bg=UNITSBlue}
\setbeamercolor{author in head/foot}{bg=UNITSIceBlue}
\setbeamercolor{title in head/foot}{bg=UNITSIceBlue}
\setbeamercolor{date in head/foot}{bg=UNITSIceBlue}
\setbeamercolor{institute in head/foot}{bg=UNITSIceBlue}